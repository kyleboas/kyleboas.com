---
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
  xmlns:wfw="http://wellformedweb.org/CommentAPI/"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
  xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
  xmlns:georss="http://www.georss.org/georss"
  xmlns:geo="http://www.w3.org/2003/01/geo/wgs84_pos#"
>
  <channel>
    <title>Kyle Boas</title>
    <description>What I am reading and watching.</description> 
    <link>{{ site.url }}</link>
    <language>en-us</language>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <atom:link href="{{ site.url }}/feed" rel="self" type="application/rss+xml" />
    
    {% for post in site.posts %}
      {% unless post.categories contains 'Notes' %}
        <item>
          <title>{{ post.title }}</title>
          <link>{{ site.url }}{{ post.url | uri_escape }}</link>
          <guid isPermaLink="true">{{ site.url }}{{ post.url | uri_escape }}</guid>
          <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
          <dc:creator><![CDATA[Kyle Boas]]></dc:creator>
          <description><![CDATA[ 
            {% assign excerpt = post.excerpt | strip_html | replace: '\n', ' ' | replace: '\r', ' ' %}
            {% if excerpt.size > 265 %}
              {{ excerpt | truncatewords: 50, '...' }}
            {% else %}
              {{ excerpt }}
            {% endif %}
          ]]></description>

          <content:encoded><![CDATA[
            {% if post.l1 and post.t1 %}
            <p>Referencing:</p> <a href="{{ post.l1 }}">{{ post.t1 }}</a>
            {% endif %}
            {% if post.l2 and post.t2 %}
            <p>Referencing:</p> <a href="{{ post.l1 }}">{{ post.t1 }}</a>, <a href="{{ post.l2 }}">{{ post.t2 }}</a>
                {% endif %}
                {% if post.l3 and post.t3 %}
             <p>Referencing:</p> <a href="{{ post.l1 }}">{{ post.t1 }}</a>, <a href="{{ post.l2 }}">{{ post.t2 }}</a>, <a href="{{ post.l3 }}">{{ post.t3 }}</a>
                {% endif %}
                {{ post.content }}
            ]]></content:encoded>
        </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
